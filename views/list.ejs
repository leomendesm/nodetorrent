<!DOCTYPE html>
<html>
  <head>
    <title>Torrent Downloader</title>
      <!-- Compiled and minified CSS -->
  	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.98.0/css/materialize.min.css">
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
	<center>
   		<img src="images/logo.png" class="responsive-img" alt="">
   	</center>
   	<div class="row">
   	<center>
   	<h3>List of Uploads</h3>
   	<div class="col l8 offset-l2 s12">
   	<div class="collection">
			<% files.forEach((file)=>{
				var link;
				let separated = file.split('\/');
				let count = separated.length;
				if(separated[count-2] === "files"){
					link = separated[count-1];
				}else{
					link = separated[count-2] +"\/" + separated[count-1];
				}
			%>
		<a href="/files/<%= link %>" class="collection-item" download><%= separated[count-1] %> </a>
			<% }) %>
		</div>
		</div>
			</center>
	</div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
  	<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.98.0/js/materialize.min.js"></script>
  	<script src="/socket.io/socket.io.js"></script>
  </body>
</html>
